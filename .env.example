# 内部AI工具API配置
# 企业环境优化版

# ========== AI工具配置 ==========
AI_TOOL_URL=https://taa.xxx.co.jp

# ========== 浏览器配置 ==========
# 是否使用无头模式（生产环境建议true）
BROWSER_HEADLESS=true

# 浏览器操作延迟(ms)，用于稳定性
BROWSER_SLOW_MO=100

# 是否使用持久化上下文（推荐true，可保持登录状态）
USE_PERSISTENT_CONTEXT=true

# ========== 会话池配置 ==========
# 最大并发会话数
MAX_SESSIONS=3

# 会话超时时间(秒)
SESSION_TIMEOUT=300

# ========== 数据目录 ==========
# 认证状态保存路径（相对路径或绝对路径）
AUTH_STATE_PATH=./auth_state

# 浏览器数据目录会自动创建在 AUTH_STATE_PATH 同级的 browser_data 文件夹

# ========== API配置 ==========
API_HOST=0.0.0.0
API_PORT=8000

# ========== 输入限制 ==========
MAX_INPUT_CHARS=50000

# 响应超时（秒）
RESPONSE_TIMEOUT=120

# ========== 页面元素选择器 ==========
# 这些选择器需要根据实际的AI工具页面HTML结构来配置
# 使用 python tools/analyze_page.py 可以帮助分析页面

# 输入框选择器
SELECTOR_INPUT=textarea[data-testid='chat-input'], textarea.chat-input, textarea[placeholder*='消息'], textarea[placeholder*='输入'], #prompt-textarea, textarea

# 发送按钮选择器
SELECTOR_SEND_BUTTON=button[data-testid='send-button'], button.send-button, button[aria-label*='发送'], button[aria-label*='Send'], button:has(svg)

# 响应内容选择器
SELECTOR_RESPONSE=div[data-testid='response'], div.response-content, div.markdown, div.message-content, div[class*='response'], div[class*='answer']

# 加载状态选择器
SELECTOR_LOADING=div.loading, div[class*='loading'], div[class*='typing'], span[class*='cursor']

# 新对话按钮选择器
SELECTOR_NEW_CHAT=button[data-testid='new-chat'], button.new-chat, button[aria-label*='新对话'], button[aria-label*='New'], a[href*='new']

# 模型选择器
SELECTOR_MODEL_SELECT=select[data-testid='model-select'], div[class*='model-selector'], button[class*='model']
